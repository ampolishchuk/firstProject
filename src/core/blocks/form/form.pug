include input/input
include label/label

include form-input/form-input
include form-dropdown/form-dropdown
include form-selectDate/form-selectDate
include form-checkbox/form-checkbox
include form-radio/form-radio
include form-toggle/form-toggle
include form-like/form-like
include form-rate/form-rate
include form-slider/form-slider

mixin form()
    - var mod = ''
    if attributes.params
        - var form = attributes.params
        - mod = form.mod?' ' + form.mod:''

    form(class=`form${mod}`)
        block