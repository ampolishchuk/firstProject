extends ../_templates/main/main

include ../../core/init/init

block css
    +css("main.css")
    +css("uikit.css")
block title 
    | index.html
block body 
    +page(mod='page_uikit')
        +panel()
            +container(mod='container_colorsTypes')
                +column(mod='column_colorsTypes')
                    +color(elem={example:{mod:'color-example_dark'},name:{block:'Dark Shade 100%'}, hex:{block:'#1F2041'}})
                    +color(elem={example:{mod:'color-example_dark75'},name:{block:'Dark Shade 75%'}, hex:{block:'#1F2041'}})
                    +color(elem={example:{mod:'color-example_dark50'},name:{block:'Dark Shade 50%'}, hex:{block:'#1F2041'}})
                    +color(elem={example:{mod:'color-example_dark25'},name:{block:'Dark Shade 25%'}, hex:{block:'#1F2041'}})
                    +color(elem={example:{mod:'color-example_dark5'},name:{block:'Dark Shade 5%'}, hex:{block:'#1F2041'}})
                    +color(elem={example:{mod:'color-example_purple'},name:{block:'Purple'}, hex:{block:'#BC9CFF'}})
                    +color(elem={example:{mod:'color-example_green'},name:{block:'Green'}, hex:{block:'#6FCF97'}})
                +column(mod='column_colorsTypes')
                    +type(mod='type_h1',elem={tag:{block:'H1'},example:{block:'This one is the sub-section or widget title'}})
                    +type(mod='type_h2',elem={tag:{block:'H2'},example:{block:'Next one is the item title inside widgets'}})
                    +type(mod='type_h3',elem={tag:{block:'H3'},example:{block:'This is a label or CTA text'}})
                    +type(elem={tag:{block:'Body'},example:{block:'This is the body text which is used for most of the design, like paragraphs, lists, etc.'}})
        +panel()
            +container(mod='container_formElements')
                +column(mod='column_formElements')
                    +element(mod='element_wide')
                        +form()
                            +form-input(
                                title={
                                    text: {tag:'h3', val:'Text field'},
                                    subtext: {tag:'h3', val:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        placeholder: 'Email'}
                                }
                            )
                            +form-input(
                                title={
                                    text: {tag:'h3', val:'Text field'},
                                    subtext: {tag:'h3', val:'Hover / Focus'}
                                },
                                input={
                                    mod:'input_hovered',
                                    attr:{
                                        type:'text',
                                        value:'This is pretty awesome'
                                    }
                                }
                            )
                            +form-dropdown(
                                title={
                                    text: {tag:'h3', val:'Dropdown'},
                                    subtext: {tag:'h3', val:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        value:'Сколько гостей',
                                    }
                                }
                            )
                            +form-input(
                                title={
                                    text: {tag:'h3', val:'Masked text field'},
                                    subtext: {tag:'h3', val:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        placeholder:'ДД.ММ.ГГГГ'
                                    },
                                    js:"js-input_maskDate"
                                }
                            )
                    +element(mod='element_wide')
                        +form()
                            +form-selectDate(
                                arrival={
                                    title:{
                                        text: {tag:'h3', val:'date Dropdown'}
                                    },
                                    input:{
                                        attr:{
                                            type:'text',
                                            placeholder:'ДД.ММ.ГГГГ'
                                        },
                                        js:"js-input_maskDate"
                                    }
                                },
                                leave={
                                    title:{
                                        text: {tag:'h3', val:'date Dropdown'}
                                    },
                                    input:{
                                        attr:{
                                            type:'text',
                                            value:'19.08.2019',
                                            placeholder:'ДД.ММ.ГГГГ'
                                        },
                                        js:"js-input_maskDate"
                                    }
                                }
                            )
                    +element()
                        +form()
                            +form-dropdown(
                                title={
                                    text: {tag:'h3', val:'filter date dropdown'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        value:'19 авг - 23 авг',
                                    }
                                }
                            )
                    +element()
                        +form()
                            +form-input(
                                title={
                                    text: {tag:'h3', val:'subscription text field'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        placeholder:'Email'
                                    }
                                },
                                button={
                                    mod:'button_confirm'
                                }
                            )
                +column(mod='column_formElements column_formElements_center')
                    +element()
                        +title(text='Checkbox buttons', type='h3')
                        +form()
                            +form-checkbox(text='Можно курить')
                            +form-checkbox(text='Можно с питомцами')
                            +form-checkbox(text='Можно пригласить гостей (до 10 человек)')
                +column(mod='column_formElements column_formElements_right')
                    +element(mod='element_wide')
                        +form()
                            +form-input(
                                title={
                                    text:'Text field', 
                                    subtitle:{text:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        placeholder: 'Email'}
                                }
                            )
                            +form-input(
                                title={
                                    text:'Text field', 
                                    subtitle:{text:'Hover/Focused'}
                                },
                                input={
                                    mod:'input_hovered',
                                    attr:{
                                        type:'text',
                                        value:'This is pretty awesome'
                                    }
                                }
                            )
                            +form-dropdown(
                                title={
                                    text:'Dropdown', 
                                    subtitle:{text:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        value:'Сколько гостей',
                                    }
                                }
                            )
                            +form-input(
                                title={
                                    text:'Masked text field', 
                                    subtitle:{text:'Default'}
                                },
                                input={
                                    attr:{
                                        type:'text',
                                        placeholder:'ДД.ММ.ГГГГ'
                                    },
                                    js:"js-input_maskDate"
                                }
                            )
        +panel()
            +container(mod='container_cards')
        +panel()
            +container(mod='container_headersFooters')
    +js('vendors.js')
    +js('main.js')  
    +js('uikit.js')